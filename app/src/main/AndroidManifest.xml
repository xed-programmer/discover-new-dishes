<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.casestudy.discovernewdishes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_app_logo_1"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_app_logo_1_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DiscoverNewDishes">
        <activity android:name=".FoodScheduleActivity"></activity>
        <activity
            android:name=".ViewFlipperActivity"
            android:theme="@style/Theme.DiscoverNewDishes.NoActionBar" />
        <activity android:name=".SearchVideoActivity" />
        <activity
            android:name=".RecipeDetailsActivity"
            android:label="@string/title_activity_recipe_details"
            android:theme="@style/Theme.DiscoverNewDishes.NoActionBar" />
        <activity
            android:name=".SearchActivity"
            android:theme="@style/Theme.DiscoverNewDishes.NoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/Theme.DiscoverNewDishes.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>