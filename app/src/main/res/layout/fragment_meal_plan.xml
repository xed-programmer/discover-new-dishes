<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MealPlanFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nutrients"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:layout_column="1"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Minimum"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:layout_column="2"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Maximum"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:layout_column="3"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_carb"
                        android:text="Carbohydrates"
                        android:layout_column="1"
                        style="@style/TextViewMealPlan"/>
                    <EditText
                        android:id="@+id/min_carb"
                        android:hint="10"
                        android:tag="Carbohydrates"
                        android:layout_column="2"
                        style="@style/EditTextMealPlan"/>
                    <EditText
                        android:id="@+id/max_carb"
                        android:hint="100"
                        android:tag="Carbohydrates"
                        android:layout_column="3"
                        style="@style/EditTextMealPlan"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Calories"
                        android:layout_column="1"
                        style="@style/TextViewMealPlan"/>
                    <EditText
                        android:id="@+id/min_calories"
                        android:hint="50"
                        android:tag="Calories"
                        android:layout_column="2"
                        style="@style/EditTextMealPlan"/>
                    <EditText
                        android:id="@+id/max_calories"
                        android:hint="800"
                        android:tag="Calories"
                        android:layout_column="3"
                        style="@style/EditTextMealPlan"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Protein"
                        android:layout_column="1"
                        style="@style/TextViewMealPlan"/>
                    <EditText
                        android:id="@+id/min_protein"
                        android:hint="10"
                        android:tag="Protein"
                        android:layout_column="2"
                        style="@style/EditTextMealPlan"/>
                    <EditText
                        android:id="@+id/max_protein"
                        android:hint="100"
                        android:tag="Protein"
                        android:layout_column="3"
                        style="@style/EditTextMealPlan"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Fat"
                        android:layout_column="1"
                        style="@style/TextViewMealPlan"/>
                    <EditText
                        android:id="@+id/min_fat"
                        android:hint="1"
                        android:tag="Fat"
                        android:layout_column="2"
                        style="@style/EditTextMealPlan"/>
                    <EditText
                        android:id="@+id/max_fat"
                        android:hint="100"
                        android:tag="Fat"
                        android:layout_column="3"
                        style="@style/EditTextMealPlan"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Cholesterol"
                        android:layout_column="1"
                        style="@style/TextViewMealPlan"/>
                    <EditText
                        android:id="@+id/min_cholesterol"
                        android:hint="0"
                        android:tag="Cholesterol"
                        android:layout_column="2"
                        style="@style/EditTextMealPlan"/>
                    <EditText
                        android:id="@+id/max_cholesterol"
                        android:hint="100"
                        android:tag="Cholesterol"
                        android:layout_column="3"
                        style="@style/EditTextMealPlan"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Potassium"
                        android:layout_column="1"
                        style="@style/TextViewMealPlan"/>
                    <EditText
                        android:id="@+id/min_potassium"
                        android:hint="0"
                        android:tag="Potassium"
                        android:layout_column="2"
                        style="@style/EditTextMealPlan"/>
                    <EditText
                        android:id="@+id/max_potassium"
                        android:hint="100"
                        android:tag="Potassium"
                        android:layout_column="3"
                        style="@style/EditTextMealPlan"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Sugar"
                        android:layout_column="1"
                        style="@style/TextViewMealPlan"/>
                    <EditText
                        android:id="@+id/min_sugar"
                        android:hint="0"
                        android:tag="Sugar"
                        android:layout_column="2"
                        style="@style/EditTextMealPlan"/>
                    <EditText
                        android:id="@+id/max_sugar"
                        android:hint="100"
                        android:tag="Sugar"
                        android:layout_column="3"
                        style="@style/EditTextMealPlan"/>
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btn_search_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_success_round"
                android:text="Search!"
                android:textColor="@color/black"
                android:layout_margin="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_res_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
            <LinearLayout
                android:id="@+id/layout_search_not_found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:visibility="gone"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sad_tacco"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="@string/search_not_found"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="@string/search_not_found_body"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>